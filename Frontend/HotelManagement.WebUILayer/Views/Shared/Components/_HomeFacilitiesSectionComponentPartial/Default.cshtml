@using HotelManagement.DataTransferObjectLayer.DTOs.ServiceDTOs
@model List<ResultServiceDTO>

<section class="facilities_area section_gap">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background="">
    </div>
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_w">Royal İmkânları</h2>
            <p>Çevre dostu sistemleri sevenler için özel olarak tasarlandı.</p>
        </div>
        <div class="row mb_30">
            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="facilities_item">
                        <h4 class="sec_h4"><i class="@item.Icon"></i>@item.Title</h4>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
