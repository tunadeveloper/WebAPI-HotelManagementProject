@using HotelManagement.DataTransferObjectLayer.DTOs.MessageDTOs
@model InsertMessageDTO
<form class="row contact_form" asp-controller="Contact" asp-action="SendMessage" method="post" id="contactForm" novalidate="novalidate">
    <div class="col-md-6">
        <div class="form-group">
            <input type="text" class="form-control" id="NameSurname" name="NameSurname" placeholder="Adınızı giriniz">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="Email" name="Email" placeholder="E-posta adresinizi giriniz">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="Subject" name="Subject" placeholder="Konu giriniz">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <textarea class="form-control" name="MessageContent" id="MessageContent" rows="1" placeholder="Mesajınızı giriniz"></textarea>
        </div>
    </div>
    <div class="col-md-12 text-right">
        <button type="submit" value="submit" class="btn theme_btn button_hover">Mesaj Gönder</button>
    </div>
</form>
