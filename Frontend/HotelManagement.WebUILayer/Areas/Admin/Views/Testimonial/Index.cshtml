@using HotelManagement.DataTransferObjectLayer.DTOs.TestimonialDTOs
@model List<ResultTestimonialDTO>
@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="d-flex mb-4 justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Referans Listesi</h5>
            </div>
            <div class="table-responsive" data-simplebar>
                <table class="table table-borderless align-middle text-nowrap">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Görsel</th>
                            <th scope="col">Ad Soyad</th>
                            <th scope="col">Yorum</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="fs-3 fw-normal">@item.Id</span></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" width="50" height="50" class="rounded object-fit-cover" alt="@item.NameSurname" />
                                            }
                                            else
                                            {
                                                <div class="rounded bg-light d-flex align-items-center justify-content-center" style="width:50px;height:50px;">
                                                    <i class="ti ti-photo fs-4 text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td><p class="fs-3 fw-normal mb-0">@item.NameSurname</p></td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0 text-muted" style="max-width:250px;">
                                            @(item.Comment.Length > 60 ? item.Comment.Substring(0, 60) + "..." : item.Comment)
                                        </p>
                                    </td>
                                    <td>
                                        <a href="/Admin/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-danger">Sil</a>
                                        <a href="/Admin/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-warning">Düzenle</a>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/Testimonial/InsertTestimonial" class="btn btn-success">Yeni Referans</a>
        </div>
    </div>
</div>
