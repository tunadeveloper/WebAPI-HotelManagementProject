@using HotelManagement.DataTransferObjectLayer.DTOs.ServiceDTOs
@model List<ResultServiceDTO>
@{
    ViewData["Title"] = "Hizmetler";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="d-flex mb-4 justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Hizmet Listesi</h5>
            </div>
            <div class="table-responsive" data-simplebar>
                <table class="table table-borderless align-middle text-nowrap">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">İkon</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="fs-3 fw-normal">@item.Id</span></td>
                                    <td><p class="fs-3 fw-normal mb-0">@(item.Icon ?? "-")</p></td>
                                    <td><p class="fs-3 fw-normal mb-0">@item.Title</p></td>
                                    <td>
                                        <p class="fs-3 fw-normal mb-0 text-muted" style="max-width:250px;">
                                            @(item.Description.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description))
                                        </p>
                                    </td>
                                    <td>
                                        <a href="/Admin/Service/DeleteService/@item.Id" class="btn btn-danger">Sil</a>
                                        <a href="/Admin/Service/UpdateService/@item.Id" class="btn btn-warning">Düzenle</a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/Service/InsertService" class="btn btn-success">Yeni Hizmet</a>
        </div>
    </div>
</div>
