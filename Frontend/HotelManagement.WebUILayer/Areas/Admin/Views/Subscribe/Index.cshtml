@using HotelManagement.DataTransferObjectLayer.DTOs.SubscribeDTOs
@model List<ResultSubscribeDTO>
@{
    ViewData["Title"] = "Aboneler";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <div class="d-flex mb-4 justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Abone Listesi</h5>
            </div>
            <div class="table-responsive" data-simplebar>
                <table class="table table-borderless align-middle text-nowrap">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">E-posta</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="fs-3 fw-normal">@item.Id</span></td>
                                    <td><p class="fs-3 fw-normal mb-0">@item.Email</p></td>
                                    <td>
                                    <a href="/Admin/Subscribe/DeleteSubscribe/@item.Id" class="btn btn-danger">Sil</a>
                                        <a href="/Admin/Subscribe/UpdateSubscribe/@item.Id" class="btn btn-warning">Düzenle</a>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/Subscribe/InsertSubscribe" class="btn btn-success">Yeni Abone</a>
        </div>
    </div>
</div>
